NODE_ENV=test
PORT=3000

# Postgres connection string (same Docker instance, port 5433)
DATABASE_URL=postgresql://postgres:asalbaca@localhost:5433/biometric_core?schema=public

# Redis connection string
REDIS_URL=redis://localhost:6380

# Logging level: use warn to reduce noise in tests
LOG_LEVEL=warn

# Auth tokens (test secrets - do not use in production)
AUTH_JWT_ACCESS_SECRET=test-access-secret-for-e2e-testing-only
AUTH_JWT_REFRESH_SECRET=test-refresh-secret-for-e2e-testing-only
